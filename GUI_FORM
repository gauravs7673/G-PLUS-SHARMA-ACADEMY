from tkinter import *
root = Tk()
def Successfully():
    print("Completed")


root.geometry("550x356")
root.title("G-PLUS SHARMA ACADEMY")
Label(root,text="G-PLUS SHARMA ACADEMY",font="lucida 15 bold").grid(row=0,column=3)
Frist_Name = Label(root,text="First Name").grid(row=1,column=2)
Last_Name = Label(root,text="Last Name").grid(row=2,column=2)
Father = Label(root,text="Father's Name").grid(row=3,column=2)
Mother = Label(root,text=" Mother's Name").grid(row=4,column=2)
birth = Label(root,text="D.O.B").grid(row=5,column=2)
Gender = Label(root,text="Gender").grid(row=6,column=2)
Contact = Label(root,text="Contact NO.").grid(row=7,column=2)
Address = Label(root,text="Address").grid(row=8,column=2)
payment = Label(root,text="Payment Mode").grid(row=9,column=2)

First_Namevalue = StringVar()
Last_Namevalue = StringVar()
Fathervalue = StringVar()
Mothervalue = StringVar()
birthvalue = StringVar()
Gendervalue = StringVar()
Contactvalue = StringVar()
Addressvalue = StringVar()
paymentvalue = StringVar()
Delaration=IntVar

First_Nameentry = Entry(root, textvariable=First_Namevalue)
Last_Nameentry = Entry(root, textvariable=Last_Namevalue)
Fatherentry = Entry(root, textvariable=Fathervalue)
Motherentry = Entry(root, textvariable=Mothervalue)
birthentry = Entry(root, textvariable=birthvalue)
Genderentry = Entry(root, textvariable=Gendervalue)
Contactentry = Entry(root, textvariable=Contactvalue)
Addressentry = Entry(root, textvariable=Addressvalue)
paymententry = Entry(root, textvariable=paymentvalue)

First_Nameentry.grid(row=1, column=3)
Last_Nameentry.grid(row=2, column=3)
Fatherentry.grid(row=3, column=3)
Motherentry.grid(row=4, column=3)
birthentry.grid(row=5, column=3)
Genderentry.grid(row=6, column=3)
Contactentry.grid(row=7, column=3)
Addressentry.grid(row=8, column=3)
paymententry.grid(row=9,  column=3)

Declaration = Checkbutton(text='''Please check  ''')
Declaration.grid(row=10,column=3)

Button(text="Submit",borderwidth=4, relief=SUNKEN, command=Successfully).grid(row=11, column=3)
root.mainloop()
